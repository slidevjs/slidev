{
  "version": "0.38.4",
  "private": true,
  "packageManager": "pnpm@7.12.0",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "pnpm -r --filter=./packages/** run build",
    "ci:publish": "zx scripts/publish.mjs",
    "cy": "cypress open",
    "cy:fixture": "pnpm -C cypress/fixtures/basic run dev",
    "demo:build": "zx ./scripts/demo.mjs",
    "demo:composable-vue": "pnpm -C demo/composable-vue run dev",
    "demo:dev": "pnpm -C demo/starter run dev",
    "dev": "pnpm -r --filter=./packages/** --parallel run dev",
    "lint": "eslint .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/*/package.json --all -x \"zx scripts/update-versions.mjs\"",
    "test": "vitest test"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.34.1",
    "@antfu/ni": "^0.18.8",
    "@antfu/utils": "^0.7.2",
    "@slidev/cli": "workspace:*",
    "@slidev/parser": "workspace:*",
    "@slidev/types": "workspace:*",
    "@types/cli-progress": "^3.11.0",
    "@types/codemirror": "^5.60.6",
    "@types/connect": "^3.4.35",
    "@types/debug": "^4.1.7",
    "@types/file-saver": "^2.0.5",
    "@types/fs-extra": "^11.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/katex": "^0.16.0",
    "@types/markdown-it": "^12.2.3",
    "@types/mermaid": "^9.2.0",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.2",
    "@types/prismjs": "^1.26.0",
    "@types/prompts": "^2.4.2",
    "@types/recordrtc": "^5.6.10",
    "@types/resolve": "^1.20.2",
    "@types/semver": "^7.3.13",
    "@types/yargs": "^17.0.20",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@vueuse/core": "^9.11.0",
    "bumpp": "^8.2.1",
    "cross-env": "^7.0.3",
    "cypress": "^12.3.0",
    "eslint": "^8.32.0",
    "eslint-plugin-cypress": "^2.12.1",
    "esno": "^0.16.3",
    "katex": "^0.16.4",
    "lint-staged": "^13.1.0",
    "mermaid": "^9.3.0",
    "playwright-chromium": "^1.29.2",
    "pnpm": "^7.25.1",
    "rimraf": "^4.1.1",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^5.12.9",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vite-plugin-windicss": "^1.8.10",
    "vitest": "^0.27.2",
    "zx": "^7.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "{packages,.vitepress,scripts}/**/*.{js,ts,vue,json}": [
      "eslint --fix"
    ]
  }
}
